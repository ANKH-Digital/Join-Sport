<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_join_sport"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/desc_onboarding_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_joint_sports" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_detail_post"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_join_sport"
        app:shapeAppearance="@style/AllSideRounded"
        app:srcCompat="@drawable/img_place" />

    <TextView
        android:id="@+id/textView2"
        style="@style/Bold"
        android:layout_marginTop="0dp"
        android:text="@string/txt_title"
        app:layout_constraintStart_toEndOf="@+id/iv_detail_post"
        app:layout_constraintTop_toTopOf="@+id/iv_detail_post" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/Reguler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:text="@string/txt_lorem_ipsum2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_detail_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_detail_post"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>